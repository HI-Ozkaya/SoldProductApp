@model SoldProductApp.Data.StringVM
@{
    ViewData["Title"] = "Sale Page";
}

<!-- Pills navs -->
<ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
  <li class="nav-item" role="presentation">
    <a class="nav-link btn-primary active" id="tab-login" data-mdb-toggle="pill" href="#order" role="tab"
      aria-controls="order" aria-selected="true">Order Product</a>
  </li>
  <li class="nav-item" role="presentation">
        <a class="nav-link btn-danger" id="tab-register" data-mdb-toggle="pill" href="#return" role="tab"
      aria-controls="return" aria-selected="false">Return Product</a>
  </li>
</ul>
<!-- Pills navs -->

<!-- Pills content -->
<div class="tab-content">
  <!-- Order Product -->
  <div class="tab-pane fade show active" id="order" role="tabpanel" aria-labelledby="tab-login">
    <form method="post" asp-action="AddOrder">
      <!-- Product input -->
      <div class="form-outline mb-4">
        <input type="text" id="loginName" class="form-control" asp-for="Str" />
        <label class="form-label" for="loginName">Product Name</label>
      </div>

      <!-- Submit button -->
      <button type="submit" class="btn btn-primary btn-block mb-4" asp>Order Product</button>
    </form>
  </div>



  <!-- Return Product -->
  <div class="tab-pane fade" id="return" role="tabpanel" aria-labelledby="tab-register">
    <form method="post" asp-action="AddReturn">
      <!-- RMA Code input -->
      <div class="form-outline mb-4">
        <input type="text" id="registerName" class="form-control" asp-for="Str" />
        <label class="form-label" for="registerName">RMA Code</label>
      </div>

      <!-- Submit button -->
      <button type="submit" class="btn btn-danger btn-block mb-3">Return Product</button>
    </form>
  </div>
</div>
<!-- Pills content -->

